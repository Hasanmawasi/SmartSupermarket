<div class="container mt-5">
    <div class="row">
        <!-- Reports Form Section on the left side -->
        
        <div class="col-md-6">
            <%- include('../partials/adminpartials/alertmessage.ejs') %>
            <section class="section report-form-section">
                <h2>Send Report to Admins</h2>
                <form id="reportForm" method="POST" action="/manager/sendReport">
                    <label for="reportTitle">Report Title:</label>
                    <input type="text" id="reportTitle" name="reportTitle" required placeholder="Enter report title" class="form-control mb-3">

                    <label for="reportContent">Report Content:</label>
                    <textarea id="reportContent" name="reportContent" rows="6" required placeholder="Enter the details of the report" class="form-control mb-3"></textarea>

                    <button type="submit" class="btn btn-primary">Send Report</button>
                </form>
            </section>
        </div>

        <!-- Reports View Section on the right side -->
        <div class="col-md-6 ">
            <section class="section report-view-section">
                <h2>Reports Submitted by Admins</h2>
                <div class="report-list" id="reportList">
                    <!-- Reports will be displayed here -->
                     <% if(locals.reports) { %>
                        <% locals.reports.forEach(report => { %>
                        <div class="report-card border p-3 mb-3 shadow">
                            <h3><%=report.report_title%></h3>
                            <p class="report-date"><%= new Date(report.report_date).toLocaleDateString() %></p>
                            <p class="report-content"><%= report.report_body %></p>
                        </div>
                       <% }); %>
                    <% } else {%>
                        <p>No reports have been submitted yet.</p>
                    <% } %>
                    <!-- Additional report cards will appear here -->
                </div>
            </section>
        </div>
    </div>
</div>
