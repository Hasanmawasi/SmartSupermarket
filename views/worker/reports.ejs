<div class="reports-main">
    <section class="section report-form-section">
        <h2>Send Report to Manager</h2>
        <form id="reportForm">
            <label for="reportTitle">Report Title:</label>
            <input type="text" id="reportTitle" name="reportTitle" required placeholder="Enter report title" class="form-control mb-3">

            <label for="reportContent">Report Content:</label>
            <textarea id="reportContent" name="reportContent" rows="6" required placeholder="Enter the details of the report" class="form-control mb-3"></textarea>

            <button type="submit" class="btn btn-primary">Send Report</button>
        </form>
    </section>
</div>